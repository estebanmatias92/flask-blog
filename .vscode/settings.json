{
    "python.defaultInterpreterPath": "${workspaceFolder}/app/venv/bin/python",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "${workspaceFolder}/app/venv/bin/black",
    "python.formatting.blackArgs": [
        "--line-length",
        "80"
    ],
    "python.formatting.autopep8Path": "${workspaceFolder}/app/venv/bin/autopep8",
    //"python.formatting.autopep8Args": ["--max-line-length", "80", "--experimental"],
    //"python.formatting.yapfPath": "${workspaceFolder}/app/venv/bin/yapf",
    //"python.formatting.yapfArgs": ["--max-line-length", "80"],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    //"python.linting.mypyEnabled": true,
    "editor.formatOnSave": true,
    "[python]": {
        "editor.formatOnSaveMode": "file"
    },
    //"python.testing.pytestPath": "${workspaceFolder}/app/venv/bin/pytest",
    //"python.testing.pytestEnabled": true
    // Extensions
    "prettier.tabWidth": 4,
    "prettier.useTabs": true
}